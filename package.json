{
  "name": "riderguy-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "RiderGuy - Global Rider Network Platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/FyliaCare/riderguy.git"
  },
  "bugs": {
    "url": "https://github.com/FyliaCare/riderguy/issues"
  },
  "homepage": "https://github.com/FyliaCare/riderguy#readme",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:rider-pwa": "turbo run dev --filter=rider-pwa",
    "dev:dispatcher": "turbo run dev --filter=dispatcher-web",
    "dev:auth": "turbo run dev --filter=auth-service",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "migrate": "npm run migrate --workspace=infrastructure",
    "migrate:create": "npm run migrate:create --workspace=infrastructure",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.6",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "winston": "^3.18.3"
  }
}
