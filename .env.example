# Application
NODE_ENV=development
APP_NAME=RiderGuy
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database - Local Development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/riderguy
TIMESCALE_URL=postgresql://postgres:postgres@localhost:5433/riderguy_telemetry
MONGO_URL=mongodb://localhost:27017/riderguy
REDIS_URL=redis://localhost:6379

# Database - Production (Neon)
# Get from: https://console.neon.tech/
# Format: postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/riderguy?sslmode=require
# NEON_DATABASE_URL=postgresql://...
# NEON_PROJECT_ID=your-project-id

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=riderguy
KAFKA_GROUP_ID=riderguy-consumer

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-key

# External Services
# Maps
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
ADYEN_API_KEY=your-adyen-key
ADYEN_MERCHANT_ACCOUNT=your-merchant-account

# Background Checks
ONFIDO_API_TOKEN=your-onfido-token
ONFIDO_WEBHOOK_TOKEN=your-webhook-token

# Insurance
INSURANCE_PROVIDER_API_KEY=your-insurance-key
INSURANCE_PROVIDER_URL=https://api.insurance-provider.com

# Notifications
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@riderguy.io

FCM_SERVER_KEY=your-fcm-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

WHATSAPP_API_KEY=your-whatsapp-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Object Storage
S3_BUCKET=riderguy-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=http://localhost:9000  # MinIO local

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
FEATURE_SMART_MATCHING=true
FEATURE_INSTANT_PAYOUTS=false
FEATURE_BLOCKCHAIN_CERTS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
ALLOWED_UPLOAD_MIME_TYPES=image/jpeg,image/png,application/pdf
MAX_UPLOAD_SIZE_MB=10

# ML Services
ML_SERVICE_URL=http://localhost:8000
FEATURE_STORE_URL=http://localhost:8001
